{
  "extends": "./packages/config/tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@repo/types/*": [
        "packages/types/src/*"
      ],
      "@repo/lib/*": [
        "packages/lib/src/*"
      ],
      "@repo/ui/*": [
        "packages/ui/*"
      ]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
